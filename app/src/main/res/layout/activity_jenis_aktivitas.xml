<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".JenisAktivitas">

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_jenis_aktivitas"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Choose Your Activity"
        android:textSize="22dp" />


        <RelativeLayout
            android:layout_below="@+id/textView"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/btn_istirahat"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/istirahat"></Button>

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/btn_ringan"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/ringan"
                >
            </Button>
            <Button
                android:layout_marginLeft="50dp"
                android:id="@+id/btn_sedang"
                android:layout_below="@id/btn_istirahat"
                android:layout_marginBottom="5dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/sedang"
                >
            </Button>
            <Button
                android:id="@+id/btn_berat"
                android:layout_marginRight="50dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btn_ringan"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/berat"
                >
            </Button>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_sedang"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_sangat_berat"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/sangat_berat"
                    >
                </Button>
            </RelativeLayout>


        </RelativeLayout>

