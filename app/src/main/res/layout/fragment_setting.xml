<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_setting">
        </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_below="@id/toolbar_setting"
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_setting"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="#000000"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/tv_all_notif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_setting"
                android:text="TextView" />
            <Switch
                android:checked="true"
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_all_notif"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="28dp"
                android:padding="16dp"
                android:thumb="@drawable/round_thumb"
                android:track="@drawable/round_track" />


            <TextView
                android:id="@+id/tv_set_bfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="51dp"
                android:layout_alignBaseline="@+id/switch2"
                android:text="TextView" />
            <Switch
                android:id="@+id/switch2"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/switch1"
                android:layout_below="@+id/switch1"
                android:padding="16dp"
                android:thumb="@drawable/round_thumb"
                android:track="@drawable/round_track" />

            <TextView
                android:id="@+id/tv_set_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="51dp"
                android:layout_alignBaseline="@+id/switch3"
                android:text="TextView" />
            <Switch
                android:id="@+id/switch3"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/switch1"
                android:layout_below="@+id/switch2"
                android:padding="16dp"
                android:thumb="@drawable/round_thumb"
                android:track="@drawable/round_track" />

            <TextView
                android:id="@+id/tv_set_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="51dp"
                android:layout_alignBaseline="@+id/switch4"
                android:text="TextView" />
            <Switch
                android:id="@+id/switch4"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/switch1"
                android:layout_below="@+id/switch3"
                android:padding="16dp"
                android:thumb="@drawable/round_thumb"
                android:track="@drawable/round_track" />

            <TextView
                android:id="@+id/tv_set_snacks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="51dp"
                android:layout_alignBaseline="@+id/switch5"
                android:text="TextView" />
            <Switch
                android:id="@+id/switch5"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/switch1"
                android:layout_below="@+id/switch4"
                android:padding="16dp"
                android:thumb="@drawable/round_thumb"
                android:track="@drawable/round_track" />

            <TextView
                android:id="@+id/tv_set_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="51dp"
                android:layout_alignBaseline="@+id/switch6"
                android:text="TextView" />
            <Switch
                android:id="@+id/switch6"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/switch1"
                android:layout_below="@+id/switch5"
                android:padding="16dp"
                android:thumb="@drawable/round_thumb"
                android:track="@drawable/round_track" />

        </RelativeLayout>

    </RelativeLayout>


    <!-- TODO: Update blank fragment layout -->


</FrameLayout>