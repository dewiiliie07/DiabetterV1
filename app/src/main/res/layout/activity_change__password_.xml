<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".Change_Password_Activity">

    <ImageView
        android:id="@+id/back_button_change_profile"
        android:src="@drawable/ic_left_arrow"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:tint="#0F0F0F"
        />
    <TextView
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginBottom="16dp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="32dp"
        >
        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/et_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                android:inputType="textPassword"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:id="@+id/et_new"
                android:layout_below="@id/et_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="New Password"
                android:layout_marginBottom="8dp"
                />
            <EditText
                android:layout_below="@id/et_new"
                android:id="@+id/et_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:layout_marginBottom="8dp"
                />
            <Button
                android:layout_below="@id/et_confirm"
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="Change Password"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>