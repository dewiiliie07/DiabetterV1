<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AchievementFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/iv_bg_header_profile"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_marginStart="0dp"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg_header_acv" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_header">
        <ImageView
            android:id="@+id/back_buttom"
            android:src="@drawable/ic_left_arrow"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="#0F0F0F"
            />
        <ImageView
            android:id="@+id/iv_base_menu_utama"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="140dp"
            app:srcCompat="@drawable/base_menu_header" />

        <ImageView
            android:id="@+id/iv_dp_profile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="164dp"
            android:src="@drawable/ic_acv" />

        <TextView
            android:id="@+id/tv_nama_customer"
            android:layout_below="@+id/iv_dp_profile"
            android:paddingTop="10dp"
            android:gravity="center"
            android:textSize="52px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Badge Collection"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/iv_base_menu_utama"
            android:layout_centerHorizontal="true"
            android:background="@drawable/base_add_food"
            android:layout_marginBottom="0dp">

            <TableLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="7"
                >
                <TableRow
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge1"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        android:layout_gravity="fill_horizontal"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge2"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge3"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                </TableRow>

                <TableRow android:padding="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge4"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge5"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge6"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow android:padding="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge7"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge8"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge9"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow android:padding="10dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge10"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge11"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/badge12"
                        android:src="@drawable/badge_grey"
                        android:layout_weight="1"
                        />

                </TableRow>

            </TableLayout>

        </ScrollView>

    </RelativeLayout>

</FrameLayout>