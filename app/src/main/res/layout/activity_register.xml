<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Register">

    <android.support.v7.widget.Toolbar
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_register"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="118dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Input Your Normalities"
        android:textSize="22dp" />

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:ems="10"
            android:hint="Input Your Full Name Here"
            android:background="@drawable/base_list_food" />
        <EditText
            android:id="@+id/et_email"
            android:layout_below="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:ems="10"
            android:hint="Input Your Email Here"
            android:background="@drawable/base_list_food" />
        <EditText
            android:id="@+id/et_password"
            android:layout_below="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Input Your Password Here"
            android:background="@drawable/base_list_food" />


    </RelativeLayout>


    <Button
        android:id="@+id/btn_next_to_gender"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:background="@drawable/button_background"
        android:text="Next" />




</RelativeLayout>