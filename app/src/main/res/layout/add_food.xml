<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_margin="0dp"
    android:layout_height="301dp">


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/iv_base"
                android:layout_width="300dp"
                android:layout_height="301dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/base_add_food">
            </ImageView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Today's Breakfast"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="38px"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                />

            <TextView
                android:id="@+id/tv_editFood"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edit_food"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginLeft="32dp"
                android:id="@+id/rv_list_makanan_choosen"
                android:layout_width="wrap_content"
                android:layout_height="126dp"
                android:layout_below="@+id/tv_title"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="20dp"
                ></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/rv_list_makanan_choosen"
                android:id="@+id/tv_total"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="#000000"
                />
            <TextView
                android:layout_below="@+id/rv_list_makanan_choosen"
                android:textColor="#000000"
                android:id="@+id/tv_cal2"
                android:text="cal"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/rv_list_makanan_choosen"
                android:textColor="#000000"
                android:text="0"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/tv_cal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_addFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Food"
                android:gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:layout_below="@+id/tv_total"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>
</LinearLayout>