<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LeaderboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_profile">
        <ImageView
            android:id="@+id/iv_bg_header_profile"
            android:layout_width="match_parent"
            android:layout_height="251dp"
            android:layout_marginStart="0dp"
            android:scaleType="fitStart"
            android:layout_alignParentTop="true"
            android:src="@drawable/bg_header_leaderboard" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_header">
            <ImageView
                android:id="@+id/iv_base_menu_utama"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="140dp"
                app:srcCompat="@drawable/base_menu_header" />

            <ImageView
                android:id="@+id/iv_dp_profile"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="180dp"
                android:src="@drawable/gambar_leaderboard" />

            <TextView
                android:id="@+id/tv_nama_customer"
                android:layout_below="@+id/iv_dp_profile"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="52px"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Leaderboard"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_base_menu_utama"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="32dp"
                        >
                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:padding="2dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/first_winner"
                                android:layout_marginRight="16dp"
                                />
                            <TextView
                                android:id="@+id/name_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Ms. Dewi"
                                android:textSize="20sp"
                                android:textColor="@color/colorBlack"
                                />
                            <TextView
                                android:id="@+id/level_leaderboard"
                                android:text="lv.2"
                                android:textSize="18sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="32dp"
                        >
                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:padding="2dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/second_winner"
                                android:layout_marginRight="16dp"
                                />
                            <TextView
                                android:id="@+id/name_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Ms. Dewi"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/colorBlack"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginRight="32dp"
                        >
                        <LinearLayout
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:padding="2dp"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/third_winner"
                                android:layout_marginRight="16dp"
                                />
                            <TextView
                                android:id="@+id/name_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Ms. Dewi"
                                android:textSize="20sp"
                                android:layout_gravity="center"
                                android:textColor="@color/colorBlack"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </ScrollView>


        </RelativeLayout>

    </FrameLayout>
</FrameLayout>