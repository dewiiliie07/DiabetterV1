<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_food_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle_edit_text"
        android:elevation="8dp"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/text_view_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:text="Food Name" />

        <TextView
            android:id="@+id/text_view_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_toLeftOf="@id/text_view"
            android:layout_marginRight="10dp"
            android:text="30" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:layout_marginRight="30dp"
            android:textSize="18dp"
            android:gravity="right"
            android:text="Cal"/>
        <EditText
            android:id="@+id/ed_serving_cal"
            android:text="0"
            android:layout_below="@id/text_view_food_name"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:visibility="invisible"/>

        <TextView
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_below="@id/text_view_food_name"
            android:layout_toRightOf="@+id/ed_serving_cal"
            android:text="Gram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="gram"-->
        <!--            android:layout_toEndOf="@+id/ed_serving_cal"-->
        <!--            android:layout_below="@id/text_view_calories"/>-->
        <TextView
            android:id="@+id/tv_addFood"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/button_background"
            android:layout_below="@id/text_view_calories"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/tv_rmFood"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="x"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:background="@drawable/button_background"
            android:layout_below="@id/text_view_calories"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:visibility="invisible"
            />
    </RelativeLayout>

</RelativeLayout>